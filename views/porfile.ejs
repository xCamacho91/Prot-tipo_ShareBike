<html>
<head>
    <%- include('./partials/head') %>
    <title><%= user[0].username  %></title>
</head>
<body>
<div class="container">
    <div class="wrapper">
        <div class="row">
            <div class="col-4">
                <div class="jumbotron">
                    <div class="row mb-5" style="margin-top: -30px;">
                        <button class="btn btn-warning col-2" onclick="goBack()"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></button>
                        <a href="/app/menssage" class="btn btn-info col-md-8"><i class="fa fa-comments fa-2x" aria-hidden="true"></i></a>
                        <a href="/app/logout" class="btn btn-danger col-md-2"><i class="fa fa-power-off fa-2x" aria-hidden="true"></i></a>
                    </div>

                    <div class="img-fluid">
                        <img src="<%= user[0].profilePhoto  %>"  alt="" class="rounded img-fluid">
                        <div class="profile">

                            <div class="dropdown">
                                <a class="btn btn-warning" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Alterar foto
                                    <!-- <i class="fa fa-plus fa-1x" aria-hidden="true"></i> <i class="fa fa-comments fa-2x" aria-hidden="true"></i> -->
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <form style="padding: 20px; width: 300px" action="/app/alterarfoto" method="post" enctype="multipart/form-data" >

                                        <div class="form-group files">
                                            <label for="newFoto">Escolha a sua foto</label>
                                            <input type="file" id="newFoto" name="newFoto" class="form-control">
                                        </div>

                                        <button type="submit" class="btn btn-success btn-block">Confirmar</button>
                                    </form>

                                </div>
                            </div>

                        </div>

                    </div>
                    <br>
                    <h5 class="display-9"><%= user[0]._id  %></h5>
                    <h1 class="display-9"><%= user[0].username  %></h1>

                </div>
            </div>
            <div class="col-8">
                <% if (user[0].friendAsk ){
                    var total = user[0].friendAsk.length;
                } else {
                    var total = null;
                } %>
                <% if (user[0].friend ){
                    var friend = user[0].friend.length;
                } else {
                    var friend = null;
                } %>


                <% if (locals.erros){%>
                    <% for(var i=0; i<erros.length; ++i){ %>

                        <div class="alter alert-danger text-center"> <%=  erros[i].texto  %> </div>

                    <% } %>
                <%}%>
                <div class=" tab-button-outer jumbotron">
                    <ul  id="tab-button">
                        <li><a href="#tab01" class="rounded">Perfil</a></li>
                        <li><a href="#tab02" class="rounded">MyPing (<%= friend%>) </a></li>
                        <li><a href="#tab05" class="rounded">Pedidos (<%= total%>) </a></li>
                        <li><a href="#tab03" class="rounded">Conversas</a></li>
                        <li><a href="#tab04">Mudar Password</a></li>

                        <!--<li><a href="#tab05">Tab 5</a></li>-->
                    </ul>
                </div>
                <div class="jumbotron">

                    <div id="tab01" class="tab-contents">
                        <h2>Perfil</h2>
                        <p>Informações base</p>
                    </div>

                    <div id="tab02" class="tab-contents">
                        <%- include('./partials/amigos') %>
                    </div>

                    <div id="tab05" class="tab-contents">

                        <%- include('./partials/pedidos') %>
                    </div>

                    <div id="tab03" class="tab-contents">
                        <h2>Conversas</h2>
                        <div class="box">
                            <div class="row">
                                <%- include('./partials/publicas') %>

                            </div>
                        </div>
                    </div>

                    <div id="tab04" class="tab-contents">
                        <h2>Alterar Password</h2><br>
                        <form action="/app/mudarpassword" method="post" >
                            <div class="form-group">
                                <input type="password" class="form-control item" name="antigapassword" id="antigapassword" placeholder="Password Atual">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control item" name="novapassword" id="novapassword" placeholder="Nova Password">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control item" name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirmação da Nova Password">
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success btn-block create-account">Alterar Password</button>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>